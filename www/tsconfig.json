{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es6", "scripthost"],
    "outDir": "public",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "jsx": "react",
    "removeComments": false
  },
  "include": [
    "./lib/**/*",
    "./types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
